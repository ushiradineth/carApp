<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".vehicleOwner.VehicleOwnerAddedActivity">

                <ImageView
                    android:id="@+id/background"
                    android:layout_width="match_parent"
                    android:layout_height="1100dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/background" />

                <ImageView
                    android:id="@+id/usercard"
                    android:layout_width="350dp"
                    android:layout_height="175dp"
                    android:layout_marginTop="50dp"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/card" />

                <TextView
                    android:id="@+id/textView_greeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/usercard"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_centerHorizontal="true"
                    android:text="Loading..." />

                <ImageView
                    android:id="@+id/button_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/logout"
                    android:layout_alignTop="@id/textView_greeting"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:id="@+id/vehiclecard"
                    android:layout_width="350dp"
                    android:layout_height="850dp"
                    android:layout_alignTop="@id/usercard"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="180dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/card" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/vehiclecard"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/poppins_extrabold"
                    android:text="Vehicle Details"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/car"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_alignTop="@id/textView26"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    tools:srcCompat="@drawable/ic_baseline_image_24" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/vehiclecard"
                    android:layout_alignTop="@id/car"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="220dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Vehicle no." />

                <TextView
                    android:id="@+id/textView_VehicleNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/textView14"
                    android:layout_alignTop="@id/textView14"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Loading..." />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/textView14"
                    android:layout_alignTop="@id/textView14"
                    android:layout_marginTop="70dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Model" />

                <TextView
                    android:id="@+id/textView_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/textView17"
                    android:layout_alignTop="@id/textView17"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Loading..." />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/textView17"
                    android:layout_alignTop="@id/textView17"
                    android:layout_marginTop="70dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Category" />

                <TextView
                    android:id="@+id/textView_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/textView7"
                    android:layout_alignTop="@id/textView7"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Loading..." />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/textView7"
                    android:layout_alignTop="@id/textView7"
                    android:layout_marginTop="70dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Description" />

                <TextView
                    android:id="@+id/textView_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/textView25"
                    android:layout_alignTop="@id/textView25"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Loading..." />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/textView25"
                    android:layout_alignTop="@id/textView25"
                    android:layout_marginTop="70dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Price" />

                <TextView
                    android:id="@+id/textView_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/textView23"
                    android:layout_alignTop="@id/textView23"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Loading..." />

                <TextView
                    android:id="@+id/textView223"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/textView23"
                    android:layout_alignTop="@id/textView23"
                    android:layout_marginTop="70dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Availablility" />

                <TextView
                    android:id="@+id/textView_availability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/textView223"
                    android:layout_alignTop="@id/textView223"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Loading..." />

                <ImageView
                    android:id="@+id/button_deleteVehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignTop="@id/textView_availability"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/deletevehicle"/>

                <ImageView
                    android:id="@+id/button_deleteAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/textView_availability"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/deleteaccount"
                    android:visibility="invisible" />

        </RelativeLayout>
</ScrollView>