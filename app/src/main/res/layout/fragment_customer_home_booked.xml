<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.ViewSupportActivity">

    <TextView
        android:id="@+id/textView_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="26dp"
        android:text="Loading..."
        app:layout_constraintBottom_toTopOf="@+id/bookingdaysleft"
        app:layout_constraintStart_toStartOf="@+id/bookingdaysleft" />

    <Button
        android:id="@+id/btn_support"
        android:layout_width="275dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:text="view breakdown support information"
        app:layout_constraintStart_toStartOf="@+id/btn_viewBooking"
        app:layout_constraintTop_toBottomOf="@+id/btn_viewBooking" />

    <Button
        android:id="@+id/btn_viewBooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="142dp"
        android:text="view your booking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bookingdaysleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="22dp"
        android:text="Loading..."
        app:layout_constraintBottom_toTopOf="@+id/btn_viewBooking"
        app:layout_constraintStart_toStartOf="@+id/btn_viewBooking" />

</androidx.constraintlayout.widget.ConstraintLayout>