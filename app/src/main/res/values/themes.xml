<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/secondary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AlertBoxStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/alertdialog</item>
    </style>

    <style name="EditTextStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">6</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">20dp</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="Theme.App.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.App.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>